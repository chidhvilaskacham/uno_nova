{
    "name": "uno-master",
    "version": "1.0.0",
    "type": "module",
    "description": "Unified UNO Multiplayer Game",
    "scripts": {
        "install:all": "npm install && npm install --prefix client && npm install --prefix server",
        "dev": "node dev.js",
        "start": "node server/server.js",
        "build": "npm run build --prefix client",
        "postinstall": "npm install --prefix client && npm install --prefix server && npm run build"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    },
    "dependencies": {
        "chalk": "^5.6.2",
        "dotenv": "^17.2.3",
        "execa": "^9.6.1",
        "get-port-please": "^3.2.0",
        "ora": "^9.0.0",
        "zod": "^4.2.1"
    }
}